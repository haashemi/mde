{
  "root": true,
  "extends": "@fullstacksjs/tsconfig/react",
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "paths": {
      "@/mde/components": ["./src/components/index.ts"],
      "@/mde/lib": ["./src/lib/index.ts"],
      "@/mde/stores": ["./src/stores/index.ts"],
      "@/mde/ui": ["./src/components/ui/index.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "vite.config.ts"],
  "exclude": ["node_modules"]
}
